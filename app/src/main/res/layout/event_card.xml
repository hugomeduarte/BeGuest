<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_card"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:scrollbars="vertical"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#00FFFFFF"
    android:elevation="0dp"
    android:outlineProvider="none"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        android:layout_gravity="bottom"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#1E1E1E"
            >

            <TextView
                android:id="@+id/card_event_tile"
                android:layout_width="210dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Maria Xoxo's Event"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_event_location"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_event_tile" />

            <TextView
                android:id="@+id/card_event_date"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:drawablePadding="5dp"
                android:text="29/12/22"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_event_location" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="165dp"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        android:backgroundTint="#00FFFFFF"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        >
        <ImageView
            android:id="@+id/event_card_photo"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:background="@drawable/photo_events6"
            android:elevation="0dp"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>