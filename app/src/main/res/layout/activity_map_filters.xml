<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet"
    android:background="@drawable/filter_background_shape"
    android:backgroundTint="@color/background_color"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Map Preferences"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view10"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:background="#777777"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

<!--    <ImageView-->
<!--        android:id="@+id/back_btn"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_marginBottom="30dp"-->
<!--        android:src="@drawable/ic_baseline_arrow_back_ios_24"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/textView20"-->
<!--        app:layout_constraintEnd_toStartOf="@+id/textView8"-->
<!--        app:layout_constraintHorizontal_bias="0.116"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance (Km)"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/demo_1_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:bsb_max="50"
        app:bsb_min="2"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_second_track_color="@color/red"
        app:bsb_track_size="4dp"
        app:bsb_thumb_text_size="15sp"
        app:bsb_touch_to_seek="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />


    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_buttons"
        android:fontFamily="@font/poppins_light"
        android:text="Save Changes"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/demo_1_seek_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>
