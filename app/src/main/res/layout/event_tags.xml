<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/event_tags_bottom_view"
    android:background="@drawable/filter_background_shape"
    android:paddingVertical="20dp"
    >
    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="140dp"
        android:background="@drawable/rounded_borders_no_color"
        android:backgroundTint="#777777"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/dance_textView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_borders_no_color"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:paddingVertical="7dp"
        android:paddingHorizontal="18dp"
        android:text="Dance"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7" />

    <TextView
        android:id="@+id/karaoke_textView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_borders_no_color"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:paddingVertical="7dp"
        android:paddingHorizontal="18dp"
        android:text="Karaoke"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/rave_textView"
        app:layout_constraintStart_toEndOf="@+id/dance_textView"
        app:layout_constraintTop_toBottomOf="@+id/view7" />

    <TextView
        android:id="@+id/rave_textView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_borders_no_color"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:paddingVertical="7dp"
        android:paddingHorizontal="18dp"
        android:text="Rave"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7" />

</androidx.constraintlayout.widget.ConstraintLayout>